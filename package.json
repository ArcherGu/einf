{
  "name": "einf",
  "version": "0.0.0",
  "packageManager": "pnpm@7.9.0",
  "description": "A simple electron main process framework",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/einf.git"
  },
  "keywords": [
    "electron",
    "framework",
    "decorator",
    "metadata"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">=16.0.0"
  },
  "dependencies": {
    "check-package-exists": "^1.1.0",
    "colorette": "^2.0.19"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "0.0.4",
    "@types/node": "18.7.5",
    "electron": "20.0.2",
    "eslint": "8.22.0",
    "lint-staged": "13.0.3",
    "simple-git-hooks": "2.8.0",
    "tsup": "6.2.2",
    "typescript": "4.7.4",
    "vitest": "0.22.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
