{
  "name": "einf",
  "version": "0.0.0",
  "packageManager": "pnpm@9.8.0",
  "description": "A simple electron main process framework",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/einf.git"
  },
  "keywords": [
    "electron",
    "framework",
    "decorator",
    "metadata"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "tsup && vitest run",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">=16.0.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "reflect-metadata": "^0.2.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "1.0.74",
    "@types/node": "20.16.1",
    "electron": "32.0.1",
    "eslint": "9.9.0",
    "execa": "9.3.1",
    "lint-staged": "15.2.9",
    "simple-git-hooks": "2.11.1",
    "tsup": "8.2.4",
    "typescript": "5.5.4",
    "vite": "5.4.2",
    "vite-plugin-doubleshot": "0.0.16",
    "vitest": "2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
