{
  "name": "einf",
  "version": "0.0.0",
  "packageManager": "pnpm@10.11.1",
  "description": "A simple electron main process framework",
  "author": "ArcherGu",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ArcherGu/einf.git"
  },
  "keywords": [
    "electron",
    "framework",
    "decorator",
    "metadata"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "tsup && vitest run",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "electron": ">=16.0.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "1.0.118",
    "@types/node": "22.15.29",
    "electron": "36.4.0",
    "eslint": "9.28.0",
    "execa": "9.6.0",
    "lint-staged": "16.1.0",
    "simple-git-hooks": "2.13.0",
    "tsup": "8.5.0",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-doubleshot": "0.0.18",
    "vitest": "3.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
